[Unit]
Description=Gogs (Go Git Service)
After=syslog.target
After=network.target
After=mysqld.service

[Service]
# Modify these two values and uncomment them if you have
# repos with lots of files and get an HTTP error 500 because
# of that
###
#LimitMEMLOCK=infinity
#LimitNOFILE=65535
Type=simple
User=gogs
Group=rcapps
WorkingDirectory={{ gogs_home }}/go/src/github.com/gogits/gogs
ExecStart={{ gogs_home }}/go/src/github.com/gogits/gogs/gogs web
Restart=always
Environment=USER=gogs HOME={{ gogs_home }}

[Install]
WantedBy=multi-user.target